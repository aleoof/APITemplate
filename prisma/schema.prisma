generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String
  login String @unique
  password String
  access_level Int
  expiration Int
  picture String
  email String
}


model Material {
  id String @id @default(uuid())
  code String @unique
  description String
  quantity String
}


model Kit {
  id String @id @default(uuid())
  code String @unique
  description String
  material String
}